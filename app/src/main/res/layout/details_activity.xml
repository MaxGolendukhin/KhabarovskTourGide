<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/ppppppp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/far_eastern_art_museum" />

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_activity_text_view_left_right_margin"
            android:layout_marginStart="@dimen/details_activity_text_view_left_right_margin"
            android:layout_marginTop="16dp"
            android:text="The Khabarovsk Regional Museum after N.I. Grodekov"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_view" />

        <TextView
            android:id="@+id/description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/details_activity_text_view_left_right_margin"
            android:layout_marginStart="@dimen/details_activity_text_view_left_right_margin"
            android:layout_marginTop="16dp"
            android:text="It is the main museum of Khabarovsk, contains a lot of exhibitions worth to see. Museum was founded by N. I. Grodekov. The exposition devoted to paleontology and geology of the Amur River basin, flora and fauna, the Amur River fish, the culture of the indigenous peoples of the Amur and Slavs-settlers, the history and development of the Russian Far East, the events of the Civil War in the Far East of 1917-1922."
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/title_text_view"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="@+id/title_text_view"
            app:layout_constraintTop_toBottomOf="@+id/title_text_view" />

        <ImageButton
            android:id="@+id/address_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="@+id/description_text_view"
            app:layout_constraintTop_toBottomOf="@+id/description_text_view"
            app:srcCompat="@drawable/location_24dp" />

        <TextView
            android:id="@+id/address_text_view"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/description_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/address_image_button"
            app:layout_constraintTop_toBottomOf="@+id/description_text_view" />

        <ImageButton
            android:id="@+id/site_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@+id/address_image_button"
            app:layout_constraintStart_toStartOf="@+id/address_image_button"
            app:layout_constraintTop_toBottomOf="@+id/address_text_view"
            app:srcCompat="@drawable/site_24dp" />

        <TextView
            android:id="@+id/site_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="www.sdsdf.ru"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/address_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/site_image_button"
            app:layout_constraintTop_toBottomOf="@+id/address_text_view" />

        <ImageButton
            android:id="@+id/phone_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="@+id/site_image_button"
            app:layout_constraintStart_toStartOf="@+id/site_image_button"
            app:layout_constraintTop_toBottomOf="@+id/site_text_view"
            app:srcCompat="@drawable/phone_24dp" />

        <TextView
            android:id="@+id/phone_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="999999999"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/site_text_view"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/phone_image_button"
            app:layout_constraintTop_toBottomOf="@+id/site_text_view" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>